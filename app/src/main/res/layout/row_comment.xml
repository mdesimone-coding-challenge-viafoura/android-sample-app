<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="70dp"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:text="Reply"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/row_comment_content"
        android:layout_marginRight="20dp"
        android:id="@+id/row_comment_reply"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:text="Like"
        android:layout_toRightOf="@id/row_comment_dislike"
        android:layout_below="@+id/row_comment_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/row_comment_like"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:text="Dislike"
        android:layout_below="@+id/row_comment_content"
        android:id="@+id/row_comment_dislike"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/row_comment_content"
        android:textSize="19sp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

    </TextView>

</RelativeLayout>